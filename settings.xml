<?xml version="1.0" encoding="UTF-8"?>
<settings
  xmlns="http://maven.apache.org/SETTINGS/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <servers>
    <server>
      <id>gitlab-maven</id>
      <configuration>
        <httpHeaders>
          <property>
            <name>Job-Token</name>
            <value>${env.CI_JOB_TOKEN}</value>
          </property>
        </httpHeaders>
      </configuration>
    </server>
  </servers>
  <profiles>
    <profile>
      <id>compiler</id>
      <properties>
        <siteweb-url>http://localhost/osgi</siteweb-url>
        <jenkins-url>http://localhost/jenkins</jenkins-url>
        <local-siteweb-url>file://localhost/var/www/osgi/</local-siteweb-url>
        <!--Cette variable permet de definir quel version java utiliser pour le build -->
        <SETTINGS_JAVA_HOME>${JAVA_HOME}</SETTINGS_JAVA_HOME>
      </properties>
    </profile>
    <profile>
      <id>external</id>
      <repositories>
        <repository>
           <id>tc-parent</id>
           <name>tc-parent</name>
           <url>$env{CI_API_V4_URL}/projects/10033025/packages/maven</url>
        </repository>
        <repository>
          <id>clojars</id>
          <name>clojars</name>
          <url>https://clojars.org/repo/</url>
        </repository>
        <repository>
          <id>central</id>
          <name>central</name>
          <url>https://repo1.maven.org/maven2</url>
        </repository>
        <repository>
          <id>mvnrepository</id>
          <name>mvnrepository</name>
          <url>https://www.mvnrepository.com</url>
        </repository>
        <repository>
           <id>gitlab-maven</id>
           <url>$env{CI_API_V4_URL}/projects/${env.CI_PROJECT_ID}/packages/maven</url>
         </repository>
      </repositories>
    </profile>
  </profiles>
  <activeProfiles>
    <activeProfile>external</activeProfile>
    <activeProfile>compiler</activeProfile>
  </activeProfiles>
</settings>
