<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <profiles>

        <profile>
            <id>external</id>
            <repositories>
                <repository>
                    <id>clojars</id>
                    <name>clojars</name>
                    <url>http://clojars.org/repo/</url>
                </repository>
                <repository>
                    <id>central</id>
                    <name>central</name>
                    <url>http://repo1.maven.org/maven2</url>
                </repository>
                <repository>
                    <id>mvnrepository</id>
                    <name>mvnrepository</name>
                    <url>http://www.mvnrepository.com</url>
                </repository>
            </repositories>
        </profile>


        <profile>
            <id>github-release</id>
            <repositories>
                <repository>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <id>dependencies</id>
                    <url>https://maven.pkg.github.com/collonville-tom/tc-delivery</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <id>dependencies</id>
                    <name>plugins-release</name>
                    <url>https://maven.pkg.github.com/collonville-tom/tc-delivery</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>

        <!--pour la livraison -->
    </profiles>


    <activeProfiles>
        <activeProfile>external</activeProfile>
        <activeProfile>github-release</activeProfile>
    </activeProfiles>
</settings>
